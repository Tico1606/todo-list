generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id          String       @id @default(uuid())
  name        String       @unique
  description String?
  checked     Boolean      @default(false)
  created_at  DateTime     @default(now())
  due_date    DateTime?
  priority    TaskPriority @default(MEDIUM)

  @@map("task")
}
